<% layout("/layouts/boilerplate.ejs") %>
<body>
    <div class="row" style="display: flex; flex-direction: column; align-content: space-around">
        <div class="col-8">
            <h1 style="text-align: center; margin-top: 40px;">Login on wanderlust</h1>
            <form action="/login" method="POST" class="needs-validation" novalidate>
                <div class="mb-3">
                    <label for="username" class="form-label">User Name</label>
                    <input required type="text" class="form-control" id="" name="username">
                </div>
                <div class="mb-3">
                    <label for="password" class="form-label">Password</label>
                    <input required type="password" class="form-control" id="" name="password">
                </div>
            
                <button type="submit" class="btn btn-danger">Login</button>
            </form>
        </div>
    </div>
</body>