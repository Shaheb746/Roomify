<% layout("/layouts/boilerplate.ejs") %>
<script>
  const mapToken = "<%= process.env.MAPTILER_API_KEY %>"
  const listing = <%- JSON.stringify(listing)%>
</script>
  <div class="row mt-4">
    <div class="col-8 offset-2">
      <div class="card">
        <img
          src="<%=listing.image.url%>"
          class="card-img-top show-image"
          alt="listing_image"
        />
        <div class="card-body">
          <p class="m-0 p-0">Owned by: <%= listing.owner.username %></p>
          <h5 class="card-title mt-2"><%= listing.title %></h5>
          <p class="card-text"><%= listing.description %></p>
          <p class="card-text"> prise: 
            &#8377;<%= listing.price.toLocaleString("en-IN") %>
          </p>
          <p class="card-text">Country: <%= listing.country %></p>
          <p class="card-text">location: <%= listing.location %></p>
        </div>
        
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-8 offset-2">
    <a class="btn btn-danger mt-2 " href="/listings">back to all listings</a>
    <% if (currUser && currUser.id === listing.owner.id) {%>
    <a class="btn btn-danger mt-2" href="/listings/<%=listing._id%>/edit">Edit</a>
    <form
      style="display: inline-block; margin-top: 5px;"
      method="post"
      action="/listings/<%=listing.id%>?_method=DELETE"
    >
      <button
        class="btn btn-danger mt-2"
        type="submit"
      >
        Delete
      </button>

    </form>
    <% } %>
    </div>
  </div>
  <!-- rating -->
  <div class="col-8 offset-2">
    <br>
    <br>
    <% if (currUser) { %>
    <h4>Leave a Review</h4>
    <hr>
    <form action="/listings/<%= listing.id %>/reviews" method="POST" novalidate class="needs-validation">
      <div class="mb-3">
       <fieldset class="starability-slot">
            <legend>Rating:</legend>
            <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked aria-label="No rating."/>
            <input type="radio" id="first-rate1" name="review[rating]" value="1" />
            <label for="first-rate1" title="Terrible">1 star</label>
            <input type="radio" id="first-rate2" name="review[rating]" value="2" />
            <label for="first-rate2" title="Not good">2 stars</label>
            <input type="radio" id="first-rate3" name="review[rating]" value="3" />
            <label for="first-rate3" title="Average">3 stars</label>
            <input type="radio" id="first-rate4" name="review[rating]" value="4" />
            <label for="first-rate4" title="Very good">4 stars</label>
            <input type="radio" id="first-rate5" name="review[rating]" value="5" />
            <label for="first-rate5" title="Amazing">5 stars</label>
        </fieldset>
      </div>
      <div class="mb-3">
        <label for="comment" class="form-label">Comment</label>
        <textarea required class="form-control" id="comment" rows="3" name="review[comment]"></textarea>
        <div class="invalid-feedback">
          Please provide Location.
        </div>
      </div>
      <button class="btn btn-danger">submit</button>
    </form>
    <% } %>
    <hr>
    <% if (listing.reviews.length > 0 ) { %> 
    <div class="row">
      <h4>All Reviews</h4>
      <% for(review of listing.reviews) {%>
          <div class="card col-5 m-1">
            <div class="card-body">
              <div style="display: flex;">
                <span><i >@<%=review.author.username%></i></span> &nbsp;
                <p class="starability-result" data-rating="<%=review.rating %>"></p>
              </div>
              <p style="margin-top: -20px; margin-bottom: 5px;"><%= review.comment %></p>
              <% if (currUser && currUser._id.equals(review.author.id)) { %>
                <form class="mb-2 " action="/listings/<%=listing.id%>/reviews/<%=review.id%>?_method=DELETE" method="POST">
                  <button class="btn btn-sm btn-outline-danger">Delete</button>
                </form>
             <% } %>
            </div>
          </div>
      <% } %>
    </div>
    <% } %>
    <hr>
    <!-- map  -->
    <h3>Where you'll be</h3>
    <div id="map"></div>
  </div>
<script src="/js/map.js"></script>



